<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE grammar PUBLIC "-//W3C//DTD GRAMMAR 1.0//EN"
                "grammar.dtd">
<!-- the default grammar language is FR  -->
<grammar  version="1.0"
          mode ="voice"
          xmlns="http://www.w3.org/2001/06/grammar"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.w3.org/2001/06/grammar
                              grammar.xsd"
          xml:lang="fr-FR" root="answer" tag-format="semantics/1.0">
          
   <rule id="answer" scope="public"> 
    <ruleref special="GARBAGE" /> 
    <one-of>
      <item><ruleref uri="#yes"/>
          <tag>out="action=YES";</tag></item>
      <item><ruleref uri="#no"/>
      <tag>out="action=NO";</tag></item>
      <item><ruleref uri="#dessert"/>
      <tag>out="action=DESSERT";</tag></item>
      <item><ruleref uri="#boisson"/>
      <tag>out="action=BOISSON";</tag></item>
    </one-of>
    <ruleref special="GARBAGE" />
  </rule>
       
   <rule id="yes">
    <one-of>
      <item>affirmatif</item>
      <item>tout à fait</item>
      <item>oui</item>
    </one-of> 
  </rule> 
  <rule id="no">
    <one-of>
      <item>négatif</item>
      <item>non</item>
      <item>pas question</item>
    </one-of>
  </rule>

  <rule id="dessert">
    <one-of>
      <item>millefeuille</item>
      <item>beignet</item>
      <item>compote</item>
      <item>mousse au chocolat</item>
    </one-of>
  </rule>

   <rule id="boisson">
    <one-of>
      <item>café</item>
      <item>thé</item>
      <item>jus d'abricot</item>
    </one-of>
  </rule>

</grammar>